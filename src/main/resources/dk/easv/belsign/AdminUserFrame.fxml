<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.belsign.GUI.AdminUserFrameController">

    <!-- CENTER CONTENT (auto-resizes with window) -->
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <!-- TableView that fills available space -->
            <TableView maxHeight="Infinity" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="User id" />
                    <TableColumn text="Role name" />
                    <TableColumn text="First name" />
                    <TableColumn text="Last name" />
                    <TableColumn text="Email" />
                </columns>
            </TableView>

            <!-- Buttons below the table -->
            <HBox maxWidth="Infinity" spacing="10.0">
                <Button fx:id="btnCreateUser" onAction="#onCreateUserButtonClicked" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 21;" text="+" />
                <Button fx:id="btnEditUser" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 21;" text="ðŸ–‹" />
                <Button fx:id="btnDeleteUser" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 21;" text="ðŸ—‘" />
            </HBox>
        </VBox>
    </center>

    <!-- Optional bottom button -->
    <bottom>
        <Button prefHeight="40.0" prefWidth="75.0" text="Orders" onAction="#openAdminFrame" BorderPane.alignment="CENTER" />
    </bottom>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>

</BorderPane>
