<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.belsign.GUI.AdminFrameController">

    <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
              <VBox>
                  <children>
                      <HBox alignment="BOTTOM_LEFT" prefHeight="26.0">
                          <children>
                              <Text text="Orders" />
                              <Region prefHeight="26.0" prefWidth="40.0" />
                              <Button prefHeight="25.0" prefWidth="42.0" text="+" />
                          </children>
                      </HBox>
                      <TableView fx:id="tblOrders" VBox.vgrow="ALWAYS">
                          <columns>
                              <TableColumn fx:id="colOrderId" minWidth="100.0" prefWidth="-1.0" text="Order Id" />
                          </columns>
                      </TableView>
                  </children>
                  <padding>
                      <Insets left="5.0" />
                  </padding>
              </VBox>
              <VBox>
                  <children>
                      <Region prefHeight="10.0" />
                      <Text text="Products" />
                      <TableView fx:id="tblProducts" VBox.vgrow="ALWAYS">
                          <columns>
                              <TableColumn minWidth="120.0" prefWidth="-1.0" text="Product Id" />
                              <TableColumn minWidth="120.0" prefWidth="-1.0" text="Product Name" />
                              <TableColumn minWidth="120.0" prefWidth="-1.0" text="Quantity" />
                              <TableColumn minWidth="120.0" prefWidth="-1.0" text="Size" />
                          </columns>
                      </TableView>
                  </children>
                  <padding>
                      <Insets left="10.0" />
                  </padding>
              </VBox>
              <VBox>
                  <children>
                      <Region prefHeight="9.0" />
                      <Text text="Product information" />
                      <TableView fx:id="tblInformation" VBox.vgrow="ALWAYS">
                          <columns>
                              <TableColumn minWidth="100.0" prefWidth="-1.0" text="Photos" />
                              <TableColumn minWidth="100.0" prefWidth="-1.0" text="Photo status" />
                              <TableColumn minWidth="100.0" prefWidth="-1.0" text="Approved by" />
                              <TableColumn minWidth="100.0" prefWidth="-1.0" text="Approval date" />
                              <TableColumn minWidth="100.0" prefWidth="-1.0" text="Product status" />
                          </columns>
                      </TableView>
                  </children>
                  <padding>
                      <Insets left="10.0" right="5.0" />
                  </padding>
              </VBox>
         </children>
      </HBox>
    </center>

    <bottom>
        <Button prefHeight="57.0" prefWidth="145.0" text="Users and tags" BorderPane.alignment="CENTER" />
    </bottom>

</BorderPane>
